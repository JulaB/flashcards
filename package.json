{
  "name": "flashcards",
  "private": true,
  "author": "JulaB",
  "scripts": {
    "lint-staged": "$(yarn bin)/lint-staged"
  },
  "lint-staged": {
    "config/webpack/**/*.js": [
      "eslint",
      "git add"
    ],
    "frontend/**/*.js": [
      "eslint",
      "git add"
    ],
    "frontend/**/*.css": [
      "stylelint --fix",
      "git add"
    ],
    "{app,test}/**/*.rb": [
      "bundle exec rubocop",
      "git add"
    ]
  },
  "pre-commit": [
    "lint-staged"
  ],
  "dependencies": {
    "@rails/webpacker": "^4.0.0-rc.7"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.13.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-import-resolver-webpack": "^0.11.0",
    "eslint-plugin-import": "^2.16.0",
    "lint-staged": "^8.1.3",
    "pre-commit": "^1.2.2",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0",
    "webpack-dev-server": "^3.1.14"
  }
}
