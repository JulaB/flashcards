{
  "name": "flashcards",
  "license": "MIT",
  "author": "Julia Bazhukhina",
  "repository": {
    "type": "git",
    "url": "https://github.com/JulaB/flashcards.git"
  },
  "engines": {
    "node": "16.x",
    "yarn": "1.x"
  },
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "lint-staged": "$(yarn bin)/lint-staged",
    "test": "$(yarn bin)/jest",
    "premake-badges": "yarn run test --coverage && COVERAGE=true bin/rails test",
    "make-badges": "$(yarn bin)/coverage-badges",
    "postmake-badges": "git add ./badges/js_coverage.svg ./badges/ruby_coverage.svg"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/coverage/"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "json-summary"
    ],
    "moduleDirectories": [
      "node_modules",
      "client"
    ],
    "moduleNameMapper": {
      "\\.css$": "<rootDir>/client/__tests__/mocks/styleMock.js"
    },
    "roots": [
      "<rootDir>/client/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/client/__tests__/setup/setupEnzyme.js"
    ],
    "testPathIgnorePatterns": [
      "client/__tests__/setup/",
      "client/__tests__/mocks/"
    ],
    "testEnvironment": "jsdom"
  },
  "lint-staged": {
    "config/webpack/**/*.js": [
      "eslint"
    ],
    "client/**/*.js": [
      "eslint"
    ],
    "client/**/*.css": [
      "stylelint --fix"
    ],
    "{app,test}/**/*.rb": [
      "bundle exec rubocop"
    ]
  },
  "pre-commit": [
    "lint-staged",
    "make-badges"
  ],
  "dependencies": {
    "normalize.css": "^8.0.1",
    "prop-types": "^15.7.2",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-modal": "^3.8.1",
    "react-redux": "^6.0.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/eslint-parser": "^7.18.2",
    "@babel/plugin-transform-runtime": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-react": "^7.17.12",
    "babel-jest": "^28.1.0",
    "babel-loader": "^8.2.5",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "cheerio": "=1.0.0-rc.3",
    "core-js": "3",
    "coverage-badges": "^1.0.7",
    "css-loader": "^6.7.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "enzyme-to-json": "^3.6.2",
    "eslint": "^8.17.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-webpack": "^0.13.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.1",
    "eslint-plugin-react": "^7.30.0",
    "fetch-mock": "^9.11.0",
    "file-loader": "^6.2.0",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "lint-staged": "^13.0.0",
    "mini-css-extract-plugin": "^2.6.0",
    "node-fetch": "^2.3.0",
    "postcss": "^8.4.14",
    "postcss-loader": "^7.0.0",
    "postcss-custom-media": "^7.0.7",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-import": "^14.1.0",
    "postcss-nested": "^4.1.2",
    "postcss-preset-env": "^7.7.1",
    "pre-commit": "^1.2.2",
    "redux-mock-store": "^1.5.4",
    "stylelint": "^14.8.5",
    "stylelint-config-standard": "^25.0.0",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.9.2"
  },
  "resolutions": {
    "cheerio": "1.0.0-rc.10"
  }
}
