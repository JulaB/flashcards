{
  "name": "flashcards",
  "private": true,
  "author": "JulaB",
  "scripts": {
    "lint-staged": "$(yarn bin)/lint-staged"
  },
  "lint-staged": {
    "config/webpack/**/*.js": [
      "eslint",
      "git add"
    ],
    "client/**/*.js": [
      "eslint",
      "git add"
    ],
    "client/**/*.css": [
      "stylelint --fix",
      "git add"
    ],
    "{app,test}/**/*.rb": [
      "bundle exec rubocop",
      "git add"
    ]
  },
  "pre-commit": [
    "lint-staged"
  ],
  "dependencies": {
    "@babel/preset-react": "^7.0.0",
    "@rails/webpacker": "^4.0.0-rc.7",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "normalize.css": "^8.0.1",
    "postcss-nested": "^4.1.2",
    "prop-types": "^15.7.2",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-redux": "^6.0.1",
    "redux": "^4.0.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.13.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-import-resolver-webpack": "^0.11.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-react": "^7.12.4",
    "lint-staged": "^8.1.3",
    "postcss-custom-media": "^7.0.7",
    "pre-commit": "^1.2.2",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0",
    "webpack-dev-server": "^3.1.14"
  }
}
