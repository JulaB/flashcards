{
  "name": "flashcards",
  "license": "MIT",
  "author": "Julia Bazhukhina",
  "repository": {
    "type": "git",
    "url": "https://github.com/JulaB/flashcards.git"
  },
  "scripts": {
    "lint-staged": "$(yarn bin)/lint-staged",
    "test": "$(yarn bin)/jest",
    "premake-badges": "yarn run test --coverage && COVERAGE=true rails test",
    "make-badges": "$(yarn bin)/coverage-badges",
    "postmake-badges": "git add ./badges/js_coverage.svg ./badges/ruby_coverage.svg"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/coverage/"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "json-summary"
    ],
    "moduleDirectories": [
      "node_modules",
      "client"
    ],
    "moduleNameMapper": {
      "\\.css$": "<rootDir>/client/__tests__/mocks/styleMock.js"
    },
    "roots": [
      "<rootDir>/client/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/client/__tests__/setup/setupEnzyme.js"
    ],
    "testPathIgnorePatterns": [
      "client/__tests__/setup/",
      "client/__tests__/mocks/"
    ]
  },
  "lint-staged": {
    "config/webpack/**/*.js": [
      "eslint",
      "git add"
    ],
    "client/**/*.js": [
      "eslint",
      "git add"
    ],
    "client/**/*.css": [
      "stylelint --fix",
      "git add"
    ],
    "{app,test}/**/*.rb": [
      "bundle exec rubocop",
      "git add"
    ]
  },
  "pre-commit": [
    "lint-staged",
    "make-badges"
  ],
  "dependencies": {
    "@babel/preset-react": "^7.0.0",
    "@rails/webpacker": "^4.2.2",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "normalize.css": "^8.0.1",
    "postcss-custom-media": "^7.0.7",
    "postcss-nested": "^4.1.2",
    "prop-types": "^15.7.2",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-modal": "^3.8.1",
    "react-redux": "^6.0.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.4.0",
    "coverage-badges": "^1.0.4",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.10.0",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.13.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-import-resolver-webpack": "^0.11.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.3.0",
    "eslint-plugin-react": "^7.12.4",
    "fetch-mock": "^7.3.1",
    "jest": "^24.4.0",
    "lint-staged": "^9.2.0",
    "node-fetch": "^2.3.0",
    "pre-commit": "^1.2.2",
    "redux-mock-store": "^1.5.3",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0",
    "webpack-dev-server": "^3.10.1"
  }
}
